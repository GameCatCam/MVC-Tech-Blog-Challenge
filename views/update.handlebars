<div class="text-center">
  <div>
    <h2>{{name}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.user}} on {{format_date date_created}}</p>
  </div>
  {{#if comments.length}}
  <div class="text-center comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="text-center row mb-2">
      <div class="text-center col-md-5">
        <p><strong>{{comment.user.user}}:</strong> {{comment.content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="col-md-6">
    <h3>Update Post:</h3>

    <form class="form update-post-form" data-id="{{id}}">
      <div class="form-group">
        <label for="update-name">post name:</label>
        <input class="form-input" type="text" id="update-name" name="update-name" />
      </div>
      <div class="form-group">
        <label for="update-desc">description:</label>
        <textarea class="form-input" id="update-content" name="update-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update.js"></script>
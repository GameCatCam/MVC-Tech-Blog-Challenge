<div class="text-center">
  <div>
    <h2>{{name}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.user}} on {{format_date date_created}}</p>
  </div>
  {{#if comment.length}}
  <div class="text-center comment-list">
    <h3>Current Comments:</h3>

    {{#each post.comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-5">
        <p>{{comment.content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="comment">description:</label>
        <textarea class="form-input" id="comment-text" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
